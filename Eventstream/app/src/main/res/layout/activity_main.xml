<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:id="@+id/main_Layout"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"
    android:weightSum="1"
    android:background="#FAFAFA">

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/background_light"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true">

        <Button
            android:id="@+id/button_capture"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_gravity="center_horizontal|bottom"
            android:typeface="sans"
            android:contentDescription="captureButton"
            android:longClickable="false"
            android:nestedScrollingEnabled="false"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:visibility="visible"
            android:background="@drawable/cameragraphic"/>
    </FrameLayout>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_create"
        android:layout_gravity="right|top"
        android:background="@drawable/createventgraphic"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_events"
        android:layout_gravity="bottom"
        android:typeface="sans"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#000000"
        android:visibility="visible"
        android:background="@drawable/eventgraphic"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/button_profile"
        android:typeface="sans"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#000000"
        android:visibility="visible"
        android:background="@drawable/usergraphic"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp" />

</RelativeLayout>
